<!DOCTYPE skin>
<skin>
  <manifest>
    <title>SkinConcepts</title>
    <author>Ferran Pujol Camins</author>
    <version>1.12.0.01</version>
    <description>An example skin showing how to properly align widgets.</description>
    <language>en</language>
    <license>Creative Commons Attribution, Share-Alike 3.0 Unported</license>
    <attributes>
      <attribute config_key="[Master],num_decks">2</attribute>
    </attributes>
  </manifest>

  <ObjectName>Mixxx</ObjectName>
  <Style src="skin:style.qss"/>

  <MinimumSize>500,200</MinimumSize>
  <SizePolicy>me,me</SizePolicy>
  <Layout>horizontal</Layout>

  <Children>
    <WidgetGroup>
      <ObjectName>SkinStuff</ObjectName>
      <Layout>vertical</Layout>
      <Size>800f,10me</Size>
      <Children>
            <WidgetStack currentpage="[Master],enabled">
                <NextControl>[Page],next</NextControl>
                <PrevControl>[Page],prev</PrevControl>
                <Children>
                    <WidgetGroup trigger="[Page],page1">
                        <ObjectName>Page1</ObjectName>
                        <Size>1me,1me</Size>
                        <Layout>horizontal</Layout>
                        <Children></Children>
                    </WidgetGroup>
                    <WidgetGroup trigger="[Page],page2">
                        <ObjectName>Page2</ObjectName>
                        <Size>1me,1me</Size>
                        <Layout>horizontal</Layout>
                        <Children></Children>
                    </WidgetGroup>
                    <WidgetGroup trigger="[Page],Page3">
                        <ObjectName>Page3</ObjectName>
                        <Size>1me,1me</Size>
                        <Layout>horizontal</Layout>
                        <Children></Children>
                    </WidgetGroup>
                </Children>
            </WidgetStack>
            <WidgetGroup>
                <ObjectName>Controls</ObjectName>
                <Layout>horizontal</Layout>
                <Size>1me,50f</Size>
                <Children>
                    <PushButton>
                        <Size>50f,1me</Size>
                        <NumberStates>1</NumberStates>
                        <State>
                            <Number>0</Number>
                            <Pressed>pressed.png</Pressed>
                            <Unpressed>unpressed.png</Unpressed>
                        </State>
                        <Connection>
                            <ConfigKey>[ChannelX],hotcue_Y_activate</ConfigKey>
                            <EmitOnDownPress>true</EmitOnDownPress>
                            <ButtonState>LeftButton</ButtonState>
                        </Connection>
                        <Connection>
                            <ConfigKey>[ChannelX],hotcue_Y_activate</ConfigKey>
                            <EmitOnDownPress>false</EmitOnDownPress>
                            <ButtonState>LeftButton</ButtonState>
                        </Connection>
                        <Connection>
                            <ConfigKey>[ChannelX],hotcue_Y_clear</ConfigKey>
                            <EmitOnDownPress>true</EmitOnDownPress>
                            <ButtonState>RightButton</ButtonState>
                        </Connection>
                    </PushButton>
                </Children>
            </WidgetGroup>
      </Children>
    </WidgetGroup>
    <WidgetGroup>
        <ObjectName>aaa</ObjectName>
        <Layout>horizontal</Layout>
        <Children>
            <Time>
              <ObjectName>Clock</ObjectName>
              <SizePolicy>min,min</SizePolicy>
            </Time>
            <PushButton>
                <Size>50f,50f</Size>
                <Style>background-color: #550055;</Style>
                <TooltipId>play_cue_set</TooltipId>
                <NumberStates>1</NumberStates>
                <RightClickIsPushButton>true</RightClickIsPushButton>
                <State>
                    <Number>0</Number>
                    <Text>A</Text>
                </State>
                <Connection>
                    <ConfigKey>[Channel1],hotcue_1_gotoandplay</ConfigKey>
                    <EmitOnDownPress>true</EmitOnDownPress>
                    <ButtonState>LeftButton</ButtonState>
                </Connection>
                <Connection>
                    <ConfigKey>[Channel2],hotcue_1_gotoandplay</ConfigKey>
                    <EmitOnDownPress>true</EmitOnDownPress>
                    <ButtonState>LeftButton</ButtonState>
                </Connection>
            </PushButton>
        </Children>
        <Connection>
            <ConfigKey>[Master],num_decks</ConfigKey>
            <BindProperty>visible</BindProperty>
        </Connection>
    </WidgetGroup>


  </Children>
</skin>
